{% extends 'base.html.twig' %}


{% block title %}ChitChat{% endblock %}

{% block body %}

    <header class="w-full h-16 drop-shadow-xl bg-slate-700">
        <div class=" h-full flex items-center">         
            {% if app.user %}
            <p class=" text-white font-semibold mx-4">{{ app.user.Firstname }} {{ app.user.Lastname}}</p>
            {% else %}
            <p class=" text-white font-semibold mx-4">unregistered</p>
            {% endif %}   

            <img src="{{ asset('images/user.png') }}" alt="User-img" class="h-8">
            <a href="/{{ app.user ? 'logout' : 'login' }}" class=" text-center text-white text-xl hover:text-slate-200 duration-500 mx-6 ml-auto">{{ app.user ? 'Logout' : 'Login' }}</a>
         </div>       
    </header>

    {% if app.user %}
    <!--Log In-->
        <div id="app"></div>
    {% else %}
    <!--Log out-->
    <img src="{{ asset('images/logo3.png') }}" alt="ChitChat-logo" class=" m-auto block h-64">
    <h1 class=" text-center text-3xl m-1">Welcome!</h1>
    <p class=" text-center font-bold">You are not log in!</p>
    {% endif %}

{% endblock %}

{% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}

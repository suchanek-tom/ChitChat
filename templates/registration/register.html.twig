{% extends 'base.html.twig' %}

{% block title %}ChitChat | Register{% endblock %}

{% block body %}
    
<div class=" w-1/2 block m-auto">

    <div class=" border-2 rounded-lg shadow-lg hover:shadow-xl duration-500 mt-10">

        <!--Logo-img-->
        <img src="{{ asset('images/ChitChat-logo-7.png') }}" alt="ChitChat-logo" class=" block ml-auto mr-auto">

        {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.Firstname)}}
                {{ form_row(registrationForm.Lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="w-full cursor-pointer rounded p-1 bg-slate-600 duration-500 hover:bg-slate-500 font-bold text-white">Register</button>

                <p class="text-center my-5">Already have account <a href="{{path('app_login')}}" class="text-slate-600 hover:underline font-bold">Sign here:</a></p>

        {{ form_end(registrationForm) }}

    </div>

</div>
   
{% endblock %}

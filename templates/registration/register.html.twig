{# Registrační stránka #}

{% extends 'base.html.twig' %}

{% block title %}ChitChat | Register{% endblock %}

{% block body %}
    
<div class=" flex w-full h-screen items-center justify-center">

    <div class=" border-2 rounded-lg shadow-lg hover:shadow-xl duration-500 mt-10">

        <!--Logo-ChitChat-->
        <img src="{{ asset('images/ChitChat-logo-7.png') }}" alt="ChitChat-logo" class=" block ml-auto mr-auto">

        <!--Horizontální čára-->
        <hr class=" m-3">

        <!--Formulář-->
        {{ form_start(registrationForm, {'attr': {'class': 'p-5'}}) }}
                <!--Vstupní pole pro jméno-->
                {{ form_row(registrationForm.Firstname, 
                {'attr': {'class': 'shadow appearance-none border border-gray-400 text-gray-700 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}})}}

                <!--Vstupní pole pro přijmení-->
                {{ form_row(registrationForm.Lastname, 
                {'attr': {'class': 'shadow appearance-none border border-gray-400 text-gray-700 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}

                <!--Vstupní pole pro e-mail-->
                {{ form_row(registrationForm.email, 
                {'attr': {'class': 'shadow appearance-none border border-gray-400 text-gray-700 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}

                <!--Vstupní pole pro heslo-->
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'shadow appearance-none border border-gray-400 text-gray-700 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}, 
                {
                    label: 'Password'
                }) }}


                <!--Tlačítko pro zaškrtnutí pro souhlas údajů-->
                <div class=" text-center font-semibold uppercase my-2">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'm-2'}}) }}
                </div>

                <!--Tlačítko pro registraci-->
                <button type="submit" class="w-full text-xl cursor-pointer rounded p-1 bg-slate-600 duration-500 hover:bg-slate-500 font-bold text-white">Register</button>

                <!--Odstavec s odkazem, který přesměruje na přihlašovací stránku-->
                <p class="text-center my-5">Already have account? <a href="{{path('app_login')}}" class="text-slate-600 hover:underline font-bold pt-2">Sign here</a></p>

        {{ form_end(registrationForm) }}
        <!--Konec formuláře-->

    </div>

</div>
   
{% endblock %}
